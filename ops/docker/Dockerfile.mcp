# Multi-stage build for MCP server
FROM golang:1.25-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the MCP server binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o woocommerce-mcp ./cmd/mcp

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

# Copy the binary from builder stage
COPY --from=builder /app/woocommerce-mcp .

# Copy manifest file
COPY --from=builder /app/manifest.json .

# Make binary executable
RUN chmod +x ./woocommerce-mcp

# The server communicates via stdin/stdout, so no EXPOSE needed
CMD ["./woocommerce-mcp"]
